<!-- choose_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#2196F3" /> <!-- 파란색 -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- 검은색 테두리 -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF" /> <!-- 투명한 흰색 -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- 검은색 테두리 -->
        </shape>
    </item>
</selector>
